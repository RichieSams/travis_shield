doctype xml
svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", width=totalWidth, height="20")
	linearGradient#smooth(x2="0", y2="100%")
		stop(offset="0", stop-color="#bbb", stop-opacity=".1")
		stop(offset="1", stop-opacity=".1")
	mask#round()
		rect(width=totalWidth, height="20", rx="3" fill="#fff")
	g(mask="url(#round)")
		rect(width=widthA, height="20", fill=colorA)
		rect(x=widthA, width=widthB, height="20", fill=colorB)
		rect(width=totalWidth, height="20", fill="url(#smooth)")
	g(fill="#fff", text-anchor="middle", font-family="DejaVu Sans,Verdana,Geneva,sans-serif", font-size="11")
		text(x=widthA / 2, y="15", fill="#010101", fill-opacity=".3") #{textA}
		text(x=widthA / 2, y="14") #{textA}
		text(x=widthA + widthB / 2 - 1, y="15", fill="#010101", fill-opacity=".3") #{textB}
		text(x=widthA + widthB / 2 - 1, y="14") #{textB}